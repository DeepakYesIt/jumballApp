<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/authbackground">

    <LinearLayout
        android:id="@+id/lay_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_20sdp">
        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/ripple_effect_ovel"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:background="@drawable/ep_back"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp">
            <ImageView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="match_parent"
                android:background="@drawable/img_img"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins"
                android:text="Q A T A R"
                android:gravity="center|start"
                android:textColor="#FFFFFF"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_20sdp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_sticker"
        android:layout_width="match_parent"
        android:layout_below="@id/lay_root"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="match_parent"/>




</RelativeLayout>

