<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:paddingBottom="@dimen/_30sdp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/tab_border">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/authbackground"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/lay_logo"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@drawable/authlogo"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/_20sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lay_logo"
                            tools:ignore="MissingConstraints">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2">

                                <LinearLayout
                                    android:id="@+id/lay_world_cup"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/ripple_effect"
                                    android:gravity="center">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_100sdp"
                                            android:background="@drawable/world_icon" />

                                        <ImageView
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_15sdp"
                                            android:background="@drawable/solar_cup_star_bold" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_alignParentBottom="true"
                                            android:background="@drawable/dashboard_ractangle">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/fredoka_one"
                                                android:gravity="center"
                                                android:text="@string/world_cup"
                                                android:textColor="#FFFFFF"
                                                android:textSize="@dimen/_13sdp" />
                                        </LinearLayout>
                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lay_training"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/ripple_effect"
                                    android:gravity="center">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_100sdp"
                                            android:background="@drawable/world_icon" />

                                        <ImageView
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_20sdp"
                                            android:background="@drawable/training" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_alignParentBottom="true"
                                            android:background="@drawable/dashboard_ractangle">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/fredoka_one"
                                                android:gravity="center"
                                                android:text="@string/training"
                                                android:textColor="#FFFFFF"
                                                android:textSize="@dimen/_13sdp" />
                                        </LinearLayout>
                                    </RelativeLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:weightSum="2">

                                <LinearLayout
                                    android:id="@+id/lay_friendly"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/ripple_effect"
                                    android:gravity="center">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_100sdp"
                                            android:background="@drawable/world_icon" />

                                        <ImageView
                                            android:layout_width="@dimen/_40sdp"
                                            android:layout_height="@dimen/_40sdp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_15sdp"
                                            android:background="@drawable/mdi_football_pitch" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_alignParentBottom="true"
                                            android:background="@drawable/dashboard_ractangle">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/fredoka_one"
                                                android:gravity="center"
                                                android:text="@string/friendly"
                                                android:textColor="#FFFFFF"
                                                android:textSize="@dimen/_13sdp" />
                                        </LinearLayout>
                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lay_sticker_book"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/ripple_effect"
                                    android:gravity="center">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_100sdp"
                                            android:background="@drawable/world_icon" />

                                        <ImageView
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_20sdp"
                                            android:background="@drawable/oi_book" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_alignParentBottom="true"
                                            android:background="@drawable/dashboard_ractangle">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/fredoka_one"
                                                android:gravity="center"
                                                android:text="@string/sticker_book"
                                                android:textColor="#FFFFFF"
                                                android:textSize="@dimen/_13sdp" />
                                        </LinearLayout>
                                    </RelativeLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:weightSum="2">

                                <LinearLayout
                                    android:id="@+id/lay_statistics"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/ripple_effect"
                                    android:gravity="center">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_100sdp"
                                            android:background="@drawable/world_icon_with_d" />

                                        <ImageView
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_20sdp"
                                            android:background="@drawable/scoreboard" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_alignParentBottom="true"
                                            android:background="@drawable/dashboard_ractangle">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/fredoka_one"
                                                android:gravity="center"
                                                android:text="@string/statistics"
                                                android:textColor="#FFFFFF"
                                                android:textSize="@dimen/_13sdp" />
                                        </LinearLayout>
                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lay_settings"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/ripple_effect"
                                    android:gravity="center">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center">

                                        <ImageView
                                            android:layout_width="@dimen/_100sdp"
                                            android:layout_height="@dimen/_100sdp"
                                            android:background="@drawable/world_icon_with_d" />

                                        <ImageView
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_20sdp"
                                            android:background="@drawable/ant_design_setting_filled" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_alignParentBottom="true"
                                            android:background="@drawable/dashboard_ractangle">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/fredoka_one"
                                                android:gravity="center"
                                                android:text="@string/settings"
                                                android:textColor="#FFFFFF"
                                                android:textSize="@dimen/_13sdp" />
                                        </LinearLayout>
                                    </RelativeLayout>

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/mai_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_alignParentBottom="true">
                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@drawable/bitmap"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_29sdp"
                        android:background="@drawable/combined_shape">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="#000000"
                            android:padding="@dimen/_3sdp"
                            android:fontFamily="@font/poppins"
                            android:layout_marginStart="@dimen/_45sdp"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et."/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardBackgroundColor="#008C2C">
                <LinearLayout
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_effect">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/fredoka_one"
                        android:gravity="center"
                        android:text="@string/next"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

