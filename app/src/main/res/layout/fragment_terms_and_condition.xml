<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/authbackground">

    <RelativeLayout
        android:id="@+id/lay_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_10sdp">
        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/ripple_effect_ovel"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:background="@drawable/ep_back"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/fredoka_one"
            android:text="T E R M S   A N D\nC O N D I T I O N S"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_20sdp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lay_root"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/sq_block">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_30sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/term_condition_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center|start"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:text="Introduction"/>

                </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>

