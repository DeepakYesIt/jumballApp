<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:paddingBottom="@dimen/_30sdp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_450sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/choose_formation_screen"
                tools:ignore="MissingConstraints" />
            <RelativeLayout
                android:id="@+id/mai_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="-60dp"
                app:layout_constraintTop_toBottomOf="@id/img"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/logo_img"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@drawable/bitmap"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_55sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@drawable/combined_shape">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="#000000"
                        android:padding="@dimen/_3sdp"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="@dimen/_45sdp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et."/>
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/lay_shoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/mai_layout"
                tools:ignore="MissingConstraints"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_6896">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_effect">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Shoot"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/rectangle_green">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_effect">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Pass"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_15sdp"
               android:gravity="center"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginBottom="@dimen/_20sdp"
               app:layout_constraintTop_toBottomOf="@id/lay_shoot"
               tools:ignore="MissingConstraints">
               <LinearLayout
                   android:id="@+id/btn_back"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="@dimen/_5sdp"
                   android:background="@drawable/ripple_effect"
                   android:layout_gravity="center">
                   <ImageView
                       android:layout_height="@dimen/_40sdp"
                       android:layout_width="@dimen/_110sdp"
                       android:layout_margin="@dimen/_5sdp"
                       android:layout_marginTop="@dimen/_20sdp"
                       android:background="@drawable/btn_back"/>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/btn_next"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="@dimen/_5sdp"
                   android:background="@drawable/ripple_effect"
                   android:layout_gravity="center">
                   <ImageView
                       android:layout_height="@dimen/_40sdp"
                       android:layout_width="@dimen/_110sdp"
                       android:layout_margin="@dimen/_5sdp"
                       android:layout_marginTop="@dimen/_20sdp"
                       android:background="@drawable/btn_next"/>
               </LinearLayout>
           </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

